@model AdamFWatkins.Models.Sketch

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Create";

}

<h2>Edit</h2>

@*@using (Html.BeginForm()) {*@


@using (Html.BeginForm("Create", "Sketches", FormMethod.Post, new { enctype = "multipart/form-data" })){


    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sketch</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.description, "Description")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.thumbnail, "Thumbnail")
        </div>
        <div class="editor-field">
            <input type="file" name="imageThumb" />
            @Html.ValidationMessageFor(model => model.thumbnail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fullImage, "Full image")
        </div>
        <div class="editor-field">
            <input type="file" name="imageFull" />
            @Html.ValidationMessageFor(model => model.fullImage)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
